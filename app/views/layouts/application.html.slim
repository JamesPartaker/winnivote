doctype html
html
  head
    title WinniVote
    = stylesheet_link_tag    "application", media: "all", debug: true
    = csrf_meta_tags

  body
    = render :partial => "layouts/user_navbar"
    .container
      #notification_area
        - flash.each do |key, value|
          .notification class='#{key}' 
            button.close type='button' class='close' data-dismiss='alert' x
            = value

      = yield

    = javascript_include_tag "application" 
    
    == yield :javascripts